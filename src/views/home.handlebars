<h1 class="bg-success p-2">Home Productos</h1>
    
    <div class="d-flex flex-wrap justify-content-around">
    {{#each products}}
        <div class="card m-2" style="width: 18rem;">
            <img src={{this.thumbnail}} class="card-img-top" alt={{this.title}}>
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.description}}</p>
                <p class="card-text">{{this.price}}</p>
                <p class="card-text">{{this.code}}</p>
                <p class="card-text">{{this.stock}}</p>
                <button class="btn btn-danger d-grid gap-2 col-6 mx-auto">X</button>
            </div>
        </div>
    {{/each}}
</div>